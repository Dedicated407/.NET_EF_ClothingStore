@model IQueryable<Product>

@{
    ViewBag.Title = "Главная страница";
}

<section>
    <a class="btn btn-primary m-2 px-5" asp-action="HomePage">Обновить</a>

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-1 font-weight-bold">Id</div>
            <div class="col font-weight-bold">Имя</div>
            <div class="col font-weight-bold">Категория</div>
            <div class="col font-weight-bold text-right">Стоимость покупки</div>
            <div class="col font-weight-bold text-right">Стоимость продажи</div>
            <div class="col font-weight-bold text-right">Количество</div>
            <div class="col"></div>
        </div>
        <form asp-action="AddProduct" method="post">
            <div class="row p-2">
                <div class="col-1"></div>
                <div class="col">
                    <input name="Name" class="form-control"/>
                </div>
                <div class="col">
                    <input name="Category" class="form-control"/>
                </div>
                <div class="col">
                    <input name="PurchasePrice" class="form-control"/>
                </div>
                <div class="col">
                    <input name="SalePrice" class="form-control"/>
                </div>
                <div class="col">
                    <input name="Quantity" class="form-control"/>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary px-5">Добавить</button>
                </div>
            </div>
        </form>

        @if (!Model.Any())
        {
            <div class="row">
                <div class="col text-center p-2">Пока в БД пусто</div>
            </div>
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="row р-2">
                    <div class="col">@product.Id</div>
                    <div class="col">@product.Name</div>
                    <div class="col">@product.Category</div>
                    <div class="col text-right">@product.PurchasePrice</div>
                    <div class="col text-right">@product.SalePrice</div>
                    <div class="col text-right">@product.Quantity</div>
                    <div class="col">
                        <a asp-action="UpdateProduct" asp-route-key="@product.Id" class="btn btn-primary m-2 px-5">Изменить</a>
                    </div>
                </div>
            }
        }
    </div>

</section>