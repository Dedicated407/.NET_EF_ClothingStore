@model Product

@{
    ViewBag.Title = "Обновить информацию о товаре";
}

<section>
    <hЗ class="p-2 bg-primary text-white text-center">Страница обновления информации о товаре</hЗ>
    <form asp-action="UpdateProduct" method="post">
        <div class="form-group">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId">
                @if (Model.Id == Guid.Empty)
                {
                    <option disabled selected>Выберите категорию</option>
                }
                @foreach (Category category in ViewBag.Categories)
                {
                    <option selected=@(Model.Category?.Id == category.Id) value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PurchasePrice"></label>
            <input asp-for="PurchasePrice" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="SalePrice"></label>
            <input asp-for="SalePrice" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control"/>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="HomePage" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</section>